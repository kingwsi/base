pipeline {
    agent {
        docker {
            image 'node:12-alpine' 
            args '-p 3000:3000' 
        }
        dockerfile {
            filename 'Dockerfile'
            dir 'shell'
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'yarn install'
                echo '打包完成，准备构建docker'
            }
        }
    }
}
node{
    def customImage = docker.build("base-adnub-web")

    customImage.inside {
        sh 'make test'
    }
}
