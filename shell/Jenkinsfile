pipeline {
    agent {
        docker {
            image 'node:12-alpine' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'yarn install'
                echo '打包完成，准备构建docker'
            }
        }
    }
}
node{
    stage('docker镜像构建') { 
      dir('./shell'){
        sh 'cp -r ../dist ./'
        def = img docker.build("base-admin-web")
        img.run('--rm --name admin-web -d  -p 18092:80')
        echo 'docker镜像构建完成'
      }
    }
    stage('clean') { 
      sh 'docker images'
    }
}
