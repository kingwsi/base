pipeline {
    agent {
        docker {
            image 'node:12-alpine' 
            args '-p 3000:3000' 
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh 'yarn install'
                sh 'yarn build'
            }
        }
        stage('Deliver') {
            steps {
                sh 'pwd'
                sh 'sh ./shell/build-docker.sh'
            }
        }
    }
}
