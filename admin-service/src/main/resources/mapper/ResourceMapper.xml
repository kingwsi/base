<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kingwsi.bs.mapper.ResourceMapper">
    <resultMap id="RoleWithResourceIdsMap" type="com.kingwsi.bs.entity.resource.ResourceVO">
        <id property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="description" column="description"/>
        <collection property="resourceIds" ofType="java.lang.String">
            <result column="resource_id"/>
        </collection>
    </resultMap>
    <select id="selectByUserId" parameterType="string" resultType="com.kingwsi.bs.entity.resource.ResourceNode">
    SELECT r.*
    FROM resources r
             LEFT JOIN roles_and_resources rar ON r.id = rar.resource_id
             LEFT JOIN user_and_roles uar ON uar.role_id = rar.role_id
    WHERE uar.user_id = #{userId}
    </select>
    <select id="selectWithResource" resultType="com.kingwsi.bs.entity.resource.ResourceVO" resultMap="RoleWithResourceIdsMap">
    SELECT r.id, r.name, r.description, rar.resource_id
    FROM roles r
             LEFT JOIN roles_and_resources rar ON r.id = rar.role_id
    </select>
</mapper>