<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kingwsi.bs.mapper.RoleMapper">

    <resultMap id="RoleWithResourceMap" type="com.kingwsi.bs.entity.role.RoleVO">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <collection property="resourceIds" ofType="string">
            <result column="resource_id"/>
        </collection>
    </resultMap>

    <select id="selectWithResourcesPage" resultMap="RoleWithResourceMap">
        SELECT r.*, rar.resource_id
        FROM sys_roles r
        LEFT JOIN sys_roles_and_resources rar ON r.id = rar.role_id
        <where>
            <if test="roleVO.name != null">
            r.name = #{roleVO.name}
            </if>
            <if test="roleVO.id != null">
                AND r.id = #{roleVO.id}
            </if>
            <if test="roleVO.description != null">
                AND r.description = #{roleVO.description}
            </if>
        </where>
    </select>
    <select id="selectByUserId" resultType="com.kingwsi.bs.entity.role.Role">
        SELECT
            r.*
        FROM sys_roles r
        LEFT JOIN sys_users_and_roles uar ON r.id = uar.role_id
        WHERE uar.user_id = #{userId}
    </select>
</mapper>